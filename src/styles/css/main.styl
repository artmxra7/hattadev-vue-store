/*----------------------------------------
[Master Stylesheet]

Project:	QuickCart – One Page eCommerce Template
Version:	1.0
Primary use:	QuickCart – One Page eCommerce Template
----------------------------------------*/

/*----------------------------------------
[Table of contents]

1. Fonts
2. Common styles
3. Header
4. Section
5. Product
6. Checkout
7. Form
8. Cart
9. Footer
10. Notification
----------------------------------------*/
$white = #fff
$black = #000
$text = #373737
$bg = #f0f0f0
$clr = #0f4c81
$green = #2cb9a9

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600|Spartan:500,600')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Open Sans', sans-serif
	font-weight 400
	background-color $bg
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .6s
	cursor pointer
	&:focus
		outline none
a
	transition .6s
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	&:focus
		outline none

select::-ms-expand
	display none

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $white
	color $text
	text-shadow none
::selection
	background $white
	color $text
	text-shadow none

::-webkit-input-placeholder
	color rgba($text, .7)
	opacity 1
::-moz-placeholder
	color rgba($text, .7)
	opacity 1
:-moz-placeholder
	color rgba($text, .7)
	opacity 1
:-ms-input-placeholder
	color rgba($text, .7)
	opacity 1

.container
	@media (min-width: 1200px)
		max-width 1030px

.table-responsive
	display block
	width 100%
	overflow-x auto
	-webkit-overflow-scrolling touch
	-ms-overflow-style -ms-autohiding-scrollbar

.row--grid
	position relative
	.col-12
		transition .6s

.fadex-enter
	opacity 0

.fadex-enter-active
	transition opacity .6s
	position relative
	z-index 1

.fadex-enter-to
	opacity 1

.fadex-leave
	opacity 1

.fadex-leave-active
	transition opacity .6s
	position absolute
	z-index -1

.fadex-leave-to
	opacity 0

/*==============================
	Header
==============================*/
.header
	position relative
	margin-top 50px
	&__content
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		position relative
	&__logo
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 52px
		width 70px
		img
			max-width 100%
			max-height 100%
	&__tagline
		display none
	&__cart
		position relative
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 52px
		width 52px
		border-radius 30px
		background-color $bg
		box-shadow 8px 8px 20px 0px rgba($black, .06), -8px -8px 20px 0px rgba($white, 1)
		transition .6s
		color $text
		margin-left auto
		svg
			stroke $text
			width 24px
			height auto
			transition .6s
		span
			display none
			font-size 14px
			margin-left 10px
		&:hover
			color $clr
			svg
				stroke $clr
	@media (min-width: 576px)
		&__tagline
			display block
			font-size 13px
			color rgba($text, .8)
			margin-left 30px
			line-height 21px
			b
				font-weight 600
	@media (min-width: 1200px)
		&__cart
			width 150px
			span
				display block

/*==============================
	Section
==============================*/
.section
	padding 60px 0 0
	&__title
		font-family 'Spartan', sans-serif
		font-weight 600
		color $text
		font-size 26px
		line-height 100%
		margin-bottom 0
	&__text
		font-size 16px
		color rgba($text, .8)
		line-height 28px
		margin-bottom 0
		margin-top 25px
		b
			font-weight 600
	&__sort
		display flex
		flex-direction row
		justify-content flex-start
		align-items flex-start
		flex-wrap wrap
		margin-top 15px
		button
			margin-top 15px
			margin-right 30px
			font-size 16px
			color $text
			border-bottom 3px dotted transparent
			&.active
				border-color $clr
				cursor default
				&:hover
					color $text
			&:hover
				color $clr
	@media (min-width: 576px)
		padding 80px 0 0
	@media (min-width: 768px)
		padding 100px 0 0
		&__title
			font-size 32px

/*==============================
	Product
==============================*/
.product
	position relative
	display flex
	flex-direction column
	justify-content flex-end
	align-items flex-start
	height 300px
	margin-top 30px
	border-radius 30px
	background-color $bg
	box-shadow 15px 15px 30px 0px rgba($black, .07), -15px -15px 30px 0px rgba($white, .8)
	padding 30px
	&__img
		position relative
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 100%
		height auto
		background-color transparent
		border-radius 10px
		margin-bottom auto
		overflow hidden
		img
			width 100%
			height auto
	&__title
		position relative
		z-index 2
		color $text
		font-weight 600
		line-height 140%
		margin-bottom 15px
		font-size 16px
		padding-right 50px
	&__price
		position relative
		z-index 2
		color rgba($text, .8)
		line-height 100%
		font-size 14px
		font-family 'Spartan', sans-serif
		font-weight 500
	&__add
		position absolute
		z-index 3
		display flex
		flex-direction row
		justify-content center
		align-items center
		right 30px
		bottom 30px
		width 52px
		height 52px
		line-height 52px
		border-radius 50%
		box-shadow 8px 8px 20px 0px rgba($black, .1), -8px -8px 20px 0px rgba($white, .9)
		background-color $bg
		transition .6s
		svg
			stroke $clr
			width 28px
			height auto
			position relative
			z-index 2
			transition .6s
			transform rotate(0deg)
		&:hover
			box-shadow 8px 8px 20px 0px rgba($black, .15), -8px -8px 20px 0px rgba($white, 1)
			svg
				transform rotate(180deg)

/*==============================
	Checkout
==============================*/
.checkout
	position relative
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	margin-top 30px
	border-radius 30px
	background-color $bg
	box-shadow 15px 15px 30px 0px rgba($black, .07), -15px -15px 30px 0px rgba($white, .8)
	padding 30px
	&__title
		position relative
		z-index 2
		font-size 16px
		font-weight 600
		color rgba($text, .7)
		margin-bottom 0
		line-height 100%

/*==============================
	Form
==============================*/
.form
	&__group
		position relative
		z-index 2
		margin-top 30px
		height 52px
		width 100%
		input
			width 100%
			height 52px
			border-radius 30px
			background-color $bg
			box-shadow inset -4px -4px 8px 0px rgba($white, .7), inset 4px 4px 8px 0px rgba($black, .05)
			border none
			padding 0 30px
			font-size 14px
			color $text
			position relative
			transition .6s
			&:focus
				box-shadow inset -4px -4px 8px 0px rgba($white, .8), inset 4px 4px 8px 0px rgba($black, .07)
	&__btn
		position relative
		z-index 2
		margin-top 30px
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 52px
		width 100%
		border-radius 30px
		background-color $clr
		box-shadow 8px 8px 20px 0px rgba($clr, .3), -8px -8px 20px 0px rgba($white, 1)
		color $white
		text-transform uppercase
		font-size 13px
		font-weight 600
		letter-spacing .6px
		transition .6s
		&:hover
			color $white
			box-shadow 8px 8px 20px 0px rgba($clr, .4), -8px -8px 20px 0px rgba($white, 1)

/*==============================
	Cart
==============================*/
.cart
	position relative
	display flex
	flex-direction column
	justify-content space-between
	align-items flex-start
	margin-top 30px
	border-radius 30px
	background-color $bg
	box-shadow 15px 15px 30px 0px rgba($black, .07), -15px -15px 30px 0px rgba($white, .8)
	padding 30px
	min-height 404px
	&__table
		width 100%
		min-width 500px
		margin-bottom 15px
		th
			font-size 16px
			font-weight 600
			color rgba($text, .7)
			line-height 100%
			padding 0 25px 15px 0
			&:last-child
				width 24px
				padding 0 0 15px 0
		td
			font-size 16px
			font-weight 400
			color $text
			padding 15px 25px 15px 0
			&:last-child
				width 24px
				padding 15px 0
	&__img
		width 96px
		height 54px
		display flex
		flex-direction row
		justify-content center
		align-items center
		img
			width auto
			height auto
			max-width 100%
			max-height 100%
	&__delete
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 24px
		height 24px
		svg
			stroke rgba($text, .6)
			width 24px
			height auto
			transition .6s
		&:hover
			svg
				stroke $clr
	&__price
		font-family 'Spartan', sans-serif
		font-weight 500
		font-size 14px
	&__info
		display flex
		flex-direction row
		justify-content space-between
		align-items flex-end
		flex-wrap wrap
		width 100%
	&__total
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		p
			font-size 14px
			color $text
			margin-bottom 10px
		span
			font-size 24px
			color $text
			line-height 100%
			font-family 'Spartan', sans-serif
			font-weight 600
	&__systems
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 24px
		color rgba($text, .4)
		width 100%
		margin-top 20px
		i
			margin-right 15px
			&:last-child
				margin-right 0
	&__quantity
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		box-shadow inset -3px -3px 6px 0px rgba($white, .73), inset 3px 3px 6px 0px rgba($black, .08)
		border-radius 30px
		padding 0 5px
		button
			display flex
			flex-direction row
			justify-content center
			align-items center
			height 36px
			width 36px
			color rgba($text, .6)
			font-size 20px
			border-radius 50%
			background-color transparent
			&:hover
				color $clr
		input
			height 34px
			width 24px
			text-align center
			font-size 14px
			color $text
			border none
			pointer-events none
			cursor default
			background-color transparent
	&__empty
		position relative
		background-color $bg
		margin-bottom 0
		border-radius 30px
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 100%
		height 136px
		background-color $bg
		box-shadow inset -4px -4px 8px 0px rgba($white, .7), inset 4px 4px 8px 0px rgba($black, .05)
		font-size 14px
		color rgba($text, .7)
		font-weight 400
		cursor default
	@media (min-width: 576px)
		&__systems
			margin-top 0
			width auto

/*==============================
	Footer
==============================*/
.footer
	padding 60px 0 50px
	&__copyright
		display flex
		flex-direction row
		justify-content flex-start
		align-items flex-start
		flex-wrap wrap
		font-size 13px
		color rgba($text, .8)
		font-weight 400
		margin-bottom 0
		a
			color rgba($text, .8)
			&:hover
				color $clr
		span
			margin-left 30px
	&__social
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		margin-top 20px
		a
			margin-right 20px
			font-size 22px
			&:last-child
				margin-right 0
			&.facebook
				color #3b5999
			&.instagram
				color $clr
				i
					&:before
						background radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%,#d6249f 60%,#285AEB 90%)
						-webkit-background-clip text
						-webkit-text-fill-color transparent
						color $clr
			&.twitter
				color #1da1f2
			&.vk
				color #45668e
	@media (min-width: 576px)
		padding 80px 0 50px
	@media (min-width: 768px)
		padding 100px 0 50px
		&__content
			display flex
			flex-direction row
			justify-content space-between
			align-items center
		&__social
			margin-top 0

/*==============================
	Notification
==============================*/
.notices
	padding 5px 15px
	.toast
		border-radius 30px
		box-shadow none
		opacity 1
		margin 10px 0
		.toast-text
			display flex
			flex-direction row
			justify-content center
			align-items center
			height 52px
			padding 0 30px
			font-size 14px
			line-height 100%
			color rgba($text, .8)
	.toast-success
		box-shadow 8px 8px 20px 0px rgba($black, .06), -8px -8px 20px 0px rgba($white, 1)
		background-color $bg
	@media (min-width: 992px)
		padding 30px 40px